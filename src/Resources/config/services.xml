<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true">
        </defaults>

        <prototype namespace="SolidWorx\VuetifyBundle\" resource="../../**/*">
        </prototype>

        <service id="SolidWorx\VuetifyBundle\Form\Extension\DateTypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\DateType"></tag>
        </service>

        <service id="SolidWorx\VuetifyBundle\Form\Extension\RadioTypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\RadioType"></tag>
        </service>
    </services>
</container>